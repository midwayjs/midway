{
  "extends": "./node_modules/mwts/tsconfig-midway.json",
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "stripInternal": true,
    "noImplicitReturns": false,
    "strict": false,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "site"
  ],
  "typedocOptions": {
    "name": "Midway v3 Api Reference",
    "entryPointStrategy": "packages",
    "entryPoints": [
      "packages/bootstrap",
      "packages/core",
      "packages/decorator",
      "packages/web-koa"
    ],
    "out": "docs-api",
    "exclude": [
      "**/dist/**",
      "**/build/**",
      "**/node_modules/**",
      "**/benchmark/**",
      "**/*.spec.ts"
    ],
    "excludePrivate": true
  }
}
