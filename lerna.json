{
  "packages": [
    "packages/*",
    "packages-serverless/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "nohoist": [
        "@midwayjs/faas-middleware-upload",
        "midway-test-component",
        "typeorm"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/test/**",
        "jest.config.js",
        "jest.setup.js"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "forcePublish": "@midwayjs/version"
    }
  },
  "npmClient": "npm",
  "version": "3.0.0-alpha.2"
}
