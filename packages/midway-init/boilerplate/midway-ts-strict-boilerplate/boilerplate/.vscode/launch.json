  "version": "0.2.0",
  "configurations": [
    {
      "name": "Midway Debug",
      "type": "node",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "local"
      },
      "port": 9229,
      "preLaunchTask": "TypeScript compile",
      "protocol": "auto",
      "request": "launch",
      "restart": true,
      "runtimeArgs": [
        "run",
        "debug",
        "--",
        "--inspect-brk"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        // "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
