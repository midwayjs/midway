{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2017"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "app/public",
    "app/views",
    "dist",
    "node_modules",
    "test",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
