{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceRoot": "src"
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ],
  "files": [
    "src/index"
  ]
}
