{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2018"
  },
  "include": [
    "src/**/*.ts",
    "test/*.js",
    "*.js"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "dist",
    "node_modules*",
    "src/app/public",
    "src/app/views"
  ]
}
