#app
  @keyframes button {
    0% {
      transform: scale(1);
    }
    30% {
      transform: scale(1.1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1.08);
    }
  }
  @keyframes buttonCover {
    0% {
      transform: translate(-50%, -50%);
      opacity: 0.1;
    }
    100% {
      transform: translate(-50%, -50%) scale(20);
      opacity: 0;
    }
  }
  @keyframes link {
    0% {
      left: 0;
      width: 0%;
    }
    30% {
      left: 0;
      width: 100%;
    }
    60% {
      width: 80%;
      left: 20%;
    }
    100% {
      left: 0;
      width: 100%;
    }
  }
